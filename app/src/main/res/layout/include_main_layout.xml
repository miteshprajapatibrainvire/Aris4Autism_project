<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/idSingUpappBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="1dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgHeart"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/logo"
                    app:layout_constraintTop_toTopOf="@id/txLabel"
                    app:layout_constraintBottom_toBottomOf="@+id/txLabel"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:fontFamily="@font/oswald_medium"
                    android:text="LEARNERS"
                    android:textColor="@color/darkblue"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgIdNotification"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imgIdNotification" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/idPerson"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_baseline_person_24"
                    app:layout_constraintBottom_toBottomOf="@+id/imgIdNotification"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imgIdNotification" />



                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgIdNotification"
                    android:src="@drawable/group_11710"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/idPerson"
                    android:layout_width="23dp"
                    android:layout_height="23dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="70dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:background="@drawable/bg_red_corner"
                    android:text="45"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:padding="5dp"
                    android:textSize="6sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <View
            app:layout_constraintTop_toBottomOf="@+id/idSingUpappBar"
            android:layout_width="match_parent"
            android:background="@color/cardBorderColor"
            android:layout_height="1dp"
            android:shadowColor="#42000000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>