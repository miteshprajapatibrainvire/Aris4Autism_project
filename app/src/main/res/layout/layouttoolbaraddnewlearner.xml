<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/idSingUpappBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgHeart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/close"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="190dp"
                app:layout_constraintTop_toTopOf="@id/idAddNewLearner"
                app:layout_constraintBottom_toBottomOf="@+id/idAddNewLearner"
                app:layout_constraintStart_toStartOf="parent"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/idAddNewLearner"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/oswald_semibold"
                android:textSize="18sp"
                android:textColor="@color/darkblue"
                android:text="@string/add_new_learner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <nl.isaac.android.StepIndicator
                android:id="@+id/stepIndicatorNumbersAddnewLearner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idAddNewLearner"
                app:numberOfSteps="3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

</layout>