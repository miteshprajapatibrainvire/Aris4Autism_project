<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragment.SubscriptionPlanFragment"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="70dp"
    android:layout_marginBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="0dp">
 <com.google.android.material.textview.MaterialTextView
     android:id="@+id/txHowItWork"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_margin="20dp"
     android:fontFamily="@font/montserrat_semibold"
     android:text="How it works?"
     android:textColor="@color/darkgray"
     android:textSize="20sp"
     app:layout_constraintStart_toStartOf="@id/guildLeft"
     app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/idCircleOne"
        app:layout_constraintStart_toStartOf="@id/guildLeft"
        app:layout_constraintTop_toBottomOf="@+id/txHowItWork"
        app:layout_constraintEnd_toStartOf="@+id/txTop1"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_border_yellowcorner"
        android:text=" "
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_height="wrap_content"
        />

 <com.google.android.material.textview.MaterialTextView
     android:id="@+id/txTop1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="8dp"
     android:layout_marginEnd="15dp"
     android:fontFamily="@font/montserrat_medium"
     android:text="You can add maximum 5 subscription units"
     android:textColor="@color/darkgray"
     android:textSize="15sp"
     app:layout_constraintTop_toTopOf="@+id/idCircleOne"
     app:layout_constraintStart_toEndOf="@id/idCircleOne"
     app:layout_constraintBottom_toBottomOf="@+id/idCircleOne"
     />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/idCircleTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_yellowcorner"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="@+id/txTop2"
        app:layout_constraintStart_toStartOf="@id/guildLeft"
        app:layout_constraintTop_toTopOf="@+id/txTop2"
        />

 <com.google.android.material.textview.MaterialTextView
     android:id="@+id/txTop2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="15dp"
     android:layout_marginEnd="15dp"
     android:layout_marginStart="40dp"
     android:fontFamily="@font/montserrat_medium"
     android:text="1 Subscription unit for 1 child. No multiple plans\n for single child"
     android:textColor="@color/darkgray"
     android:textSize="15sp"
     app:layout_constraintEnd_toEndOf="@id/guildRight"
     app:layout_constraintStart_toEndOf="@id/idCircleTwo"
     app:layout_constraintTop_toBottomOf="@+id/txTop1"
     />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/idCircleThree"
        app:layout_constraintStart_toStartOf="@id/guildLeft"
        app:layout_constraintTop_toTopOf="@+id/txTop3"
        app:layout_constraintBottom_toBottomOf="@+id/txTop3"
        android:background="@drawable/bg_border_yellowcorner"
        android:text=" "
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.google.android.material.textview.MaterialTextView
     android:id="@+id/txTop3"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="15dp"
     android:layout_marginStart="8dp"
     android:layout_marginEnd="15dp"
     android:fontFamily="@font/montserrat_medium"
     android:text="The subscription period will begin once the payment is successful."
     android:textColor="@color/darkgray"
     android:textSize="15sp"
     app:layout_constraintEnd_toEndOf="@id/guildRight"
     app:layout_constraintStart_toEndOf="@id/idCircleThree"
     app:layout_constraintTop_toBottomOf="@+id/txTop2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/idCircleFour"
        android:text=" "
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintStart_toStartOf="@id/guildLeft"
        app:layout_constraintTop_toTopOf="@+id/txTop4"
        app:layout_constraintBottom_toBottomOf="@+id/txTop4"
        android:background="@drawable/bg_border_yellowcorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

   <com.google.android.material.textview.MaterialTextView
     android:id="@+id/txTop4"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="15dp"
     android:layout_marginStart="10dp"
     android:layout_marginEnd="15dp"
     android:fontFamily="@font/montserrat_medium"
     android:text="The subscription period will begin once the payment is successful"
     android:textColor="@color/darkgray"
     android:textSize="15sp"
     app:layout_constraintEnd_toEndOf="@id/guildRight"
     app:layout_constraintStart_toEndOf="@id/idCircleFour"
     app:layout_constraintTop_toBottomOf="@+id/txTop3" />

    <com.google.android.material.textview.MaterialTextView
     android:id="@+id/idSubscription"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Select subscription\nplans for"
     android:textColor="@color/darkgray"
     android:layout_marginTop="10dp"
     android:layout_marginStart="10dp"
     android:layout_marginBottom="10dp"
     android:textSize="14sp"
     android:fontFamily="@font/montserrat_semibold"
     app:layout_constraintStart_toStartOf="@id/guildLeft"
     app:layout_constraintTop_toBottomOf="@+id/txTop4"
        />

   <com.google.android.material.textview.MaterialTextView
     android:id="@+id/idtxLeft"
     android:text="3 Months"
     android:background="@drawable/border_blue_corner_left"
     android:padding="12dp"
     android:fontFamily="@font/oswald_medium"
     android:textColor="@color/darkblue"
     app:layout_constraintTop_toTopOf="@+id/idSubscription"
     app:layout_constraintBottom_toBottomOf="@+id/idSubscription"
     app:layout_constraintEnd_toStartOf="@id/idtxRight"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
       />

 <com.google.android.material.textview.MaterialTextView
     android:id="@+id/idtxRight"
     android:text="6 Months"
     android:fontFamily="@font/oswald_medium"
     android:padding="12dp"
     android:layout_marginEnd="10dp"
     android:textColor="@color/white"
     android:background="@drawable/border_blue_corner_right"
     app:layout_constraintTop_toTopOf="@+id/idSubscription"
     app:layout_constraintBottom_toBottomOf="@+id/idSubscription"
     app:layout_constraintEnd_toEndOf="parent"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recySubscriptionId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/idSubscription"
      />

 <androidx.constraintlayout.widget.Guideline
     android:id="@+id/guildLeft"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     app:layout_constraintGuide_begin="20dp" />

 <androidx.constraintlayout.widget.Guideline
     android:id="@+id/guildRight"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     app:layout_constraintGuide_end="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>