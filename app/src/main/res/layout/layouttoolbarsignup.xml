<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgCancel"
        android:layout_marginStart="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txSingIn"
        app:layout_constraintBottom_toBottomOf="@+id/txSingIn"
        android:src="@drawable/close"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/idSingUp"
        android:src="@drawable/singupimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txSingIn"
        app:layout_constraintBottom_toBottomOf="@+id/txSingIn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txSingIn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="19dp"
        app:fontFamily="@raw/montserrat_black"
        android:text="SIGN IN"
        android:fontFamily="@raw/osward"
        android:textSize="20sp"
        android:textColor="@color/darkblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>